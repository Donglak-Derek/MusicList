<div class="container">
	<h1 class="display-1" >Register and Login</h1>
	<div class="row">
		<div class="col">
			<div class="form-group">
				<h3>Register</h3>
				<form action="/users" method="post">
					<input type="hidden" name="authenticity_token" value="form_authenticity_token">
					<div class="p-3 mb-2 bg-primary text-white">
					<label>First Name</label>
					<input type="text" class="form-control" name="user[first_name]">
					</div>

					<div class="p-3 mb-2 bg-secondary text-white">
					<label>Last Name</label>
					<input type="text" class="form-control" name="user[last_name]">
					</div>
					<div class="p-3 mb-2 bg-success text-white">
					<label>Email</label>
					<input type="email" class="form-control" name="user[email]">
					</div>
					<div class="p-3 mb-2 bg-danger text-white">
					<label>Password</label>
					<input type="password" class="form-control" name="user[password]">
					</div>
					<div class="p-3 mb-2 bg-warning text-dark">
					<label>PW confirm</label>
					<input type="password" class="form-control" name="user[password_confirm]">
					</div>
					<div class="p-3 mb-2 bg-info text-dark">
					<input type="submit" class="form-control" value="Register">
					</div>
				</form>
			</div>
		</div>


		<div class="col">
			<div class="form-group">
				<h3>Login</h3>
				<form action="/sessions" method="post">
					<input type="hidden" name="authenticity_token" value="form_authenticity_token">
					<div class="p-3 mb-2 bg-success text-white">
					<label>Email</label>
					<input type="email" class="form-control" name="email">
					</div>
					<div class="p-3 mb-2 bg-danger text-white">
					<label>Password</label>
					<input type="password" class="form-control" name="password">
					</div>

					<div class="p-3 mb-2 bg-info text-dark">
					<input type="submit" class="form-control" value="Login">
					</div>
				</form>
			</div>
		</div>
	</div>
</div>